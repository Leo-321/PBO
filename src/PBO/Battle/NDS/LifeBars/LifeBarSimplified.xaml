<Canvas x:Class="PokemonBattleOnline.PBO.Battle.LifeBarSimplified"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        IsHitTestVisible="False" Width="80" Height="8">
    <Canvas.Resources>
        <ImageBrush x:Key="Green" TileMode="Tile" Viewport="0,0,1,4" ViewportUnits="Absolute" ImageSource="/PBO;component/images/ControlPanel/Pokemon/HpGreen.png"/>
        <ImageBrush x:Key="Yellow" TileMode="Tile" Viewport="0,0,1,4" ViewportUnits="Absolute" ImageSource="/PBO;component/images/ControlPanel/Pokemon/HpYellow.png"/>
        <ImageBrush x:Key="Red" TileMode="Tile" Viewport="0,0,1,4" ViewportUnits="Absolute" ImageSource="/PBO;component/images/ControlPanel/Pokemon/HpRed.png"/>
    </Canvas.Resources>
    <Canvas.Background>
        <ImageBrush ImageSource="/PBO;component/images/ControlPanel/Pokemon/Hp.png"/>
    </Canvas.Background>
    <Rectangle Name="Bar" Canvas.Left="14" Canvas.Top="2" Height="4"/>
</Canvas>
