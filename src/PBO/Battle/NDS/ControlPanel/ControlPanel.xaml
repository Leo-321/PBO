                                        <ContentPresenter Content="{Binding Gender}" TextBlock.FontSize="14" ContentTemplate="{x:Static ui:Labels.Gender}" Canvas.Left="58" Canvas.Top="13"/>
                                        <Image Source="{Binding Converter={x:Static c:PokemonOutwardIcon.C}}" Height="30" Width="40" SnapsToDevicePixels="True" Canvas.Bottom="3" Canvas.Right="18"/>
                                    </Canvas>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style x:Key="T" TargetType="b:GameButton">
                        <EventSetter Event="Click" Handler="Target_Click"/>
                        <Setter Property="Image" Value="/PBO;component/images/ControlPanel/Fight/Team.png"/>
                        <Setter Property="Shape" Value="M21.5,0 H53.5 A21.5,21.5 180 1 1 53.5,43 H21.5 A21.5,21.5 180 1 1 21.5,0Z"/>
                        <Setter Property="Padding" Value="2,1"/>
                        <Setter Property="Width" Value="75"/>
                        <Setter Property="Height" Value="43"/>
                        <Setter Property="Canvas.Top" Value="128"/>
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <Canvas DataContext="{Binding Pokemon}">
                                        <Rectangle RadiusX="5" RadiusY="5" Fill="#80000000" Width="100" Height="24" Canvas.Left="-15" Canvas.Top="-12"/>
                                        <TextBlock Text="{Binding Name}" FontSize="14" Foreground="#ffffff" Width="100" Canvas.Left="-15" Canvas.Top="-9"/>
                                        <ContentPresenter Content="{Binding Gender}" ContentTemplate="{x:Static ui:Labels.Gender}" Canvas.Left="58" Canvas.Top="13"/>
                                        <Image Source="{Binding Converter={x:Static c:SimPokemonIcon.C}}" Height="30" Width="40" SnapsToDevicePixels="True" Canvas.Bottom="3" Canvas.Right="18"/>
                                    </Canvas>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="Line">
                        <Setter Property="Stroke" Value="#d9f976"/>
                        <Setter Property="StrokeThickness" Value="10"/>
                        <Setter Property="IsHitTestVisible" Value="False"/>
                    </Style>
                    <Style TargetType="Rectangle">
                        <Setter Property="RadiusX" Value="25"/>
                        <Setter Property="RadiusY" Value="25"/>
                        <Setter Property="Fill" Value="#d9f976"/>
                        <Setter Property="Width" Value="81"/>
                        <Setter Property="Height" Value="49"/>
                        <Setter Property="IsHitTestVisible" Value="False"/>
                    </Style>
                </Canvas.Resources>
                <Canvas.Background>
                    <ImageBrush ImageSource="/PBO;component/images/ControlPanel/Fight/Background.png"/>
                </Canvas.Background>
                <Line Visibility="{Binding VO1O0}" X1="119" Y1="75" X2="204" Y2="75"/>
                <Line Visibility="{Binding V01}" X1="119" Y1="150" X2="204" Y2="150"/>
                <Line Visibility="{Binding V0O1}" X1="82" Y1="96" X2="82" Y2="128"/>
                <Line Visibility="{Binding V1O0}" X1="242" Y1="96" X2="242" Y2="128"/>
                <Rectangle Visibility="{Binding VO1}" Canvas.Left="41" Canvas.Top="50"/>
                <Rectangle Visibility="{Binding VO0}" Canvas.Left="201" Canvas.Top="50"/>
                <Rectangle Visibility="{Binding V0}" Canvas.Left="41" Canvas.Top="125"/>
                <Rectangle Visibility="{Binding V1}" Canvas.Left="201" Canvas.Top="125"/>
                <b:GameButton Style="{StaticResource ReturnButton}"/>
                <b:GameButton x:Name="tO1" IsPressedChanged="Target_IsPressedChanged" Content="{Binding PO1}" IsHitTestVisible="{Binding PO1.IsEnabled}" Style="{StaticResource O}" Canvas.Left="44"/>
                <b:GameButton x:Name="tO0" IsPressedChanged="Target_IsPressedChanged" Content="{Binding PO0}" IsHitTestVisible="{Binding PO0.IsEnabled}" Style="{StaticResource O}" Canvas.Left="204"/>
                <b:GameButton x:Name="t0" IsPressedChanged="Target_IsPressedChanged" Content="{Binding P0}" IsHitTestVisible="{Binding P0.IsEnabled}" Style="{StaticResource T}" Canvas.Left="44"/>
                <b:GameButton x:Name="t1" IsPressedChanged="Target_IsPressedChanged" Content="{Binding P1}" IsHitTestVisible="{Binding P1.IsEnabled}" Style="{StaticResource T}" Canvas.Left="204"/>
            </Canvas>
        </TabItem>
        <TabItem>
            <Canvas>
                <Canvas.Background>
                    <ImageBrush ImageSource="/PBO;component/images/ControlPanel/Background.png"/>
                </Canvas.Background>
                <Border Background="#80000000" BorderThickness="2" CornerRadius="12" Canvas.Left="-15" Canvas.Top="204" Width="272" Height="24">
                    <Border.Effect>
                        <BlurEffect/>
                    </Border.Effect>
                </Border>
                <TextBlock Text="点击一次预览 再次点击交换" Foreground="#f8f8f8" Margin="5,208,0,0"/>
                <b:GameButton IsEnabled="{Binding IsReturnEnabled}" Style="{StaticResource ReturnButton}"/>
                <b:GameButton x:Name="pl" Content="{Binding Pokemons[0]}" Canvas.Top="3">
                    <b:GameButton.Resources>
                        <Style x:Key="L" TargetType="b:GameButton">
                            <EventSetter Event="Click" Handler="Pokemon_Click"/>
                            <Setter Property="Width" Value="160"/>
                            <Setter Property="Height" Value="54"/>
                            <Setter Property="Image" Value="/PBO;component/images/ControlPanel/Pokemon/Button.png"/>
                            <Setter Property="Shape" Value="M0,0 H135 A25,25 180 1 1 135,50 H0 Z"/>
                            <Setter Property="Padding" Value="0,1,1,1"/>
