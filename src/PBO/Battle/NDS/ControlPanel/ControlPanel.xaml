                                <Setter.Value>
                                    <DataTemplate>
                                        <Canvas UseLayoutRounding="True">
                                            <Canvas.Resources>
                                                <Style TargetType="Label" BasedOn="{x:Static ui:Controls.STextBlock}">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Canvas.Top" Value="36"/>
                                                </Style>
                                            </Canvas.Resources>
                                            <Image Source="{Binding Converter={x:Static c:SimPokemonIcon.C}}" Height="30" Width="40" SnapsToDevicePixels="True" Canvas.Left="-1" Canvas.Top="4"/>
