                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="15"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Canvas.Top" Value="30"/>
                                            </Style>
                                        </Canvas.Resources>
