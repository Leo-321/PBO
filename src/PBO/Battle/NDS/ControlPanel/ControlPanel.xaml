                <b:GameButton x:Name="zmove1" Content="{Binding ControllingPokemon.ZMoves[1]}" Style="{StaticResource R}" Margin="0,41,0,0" ToolTip="{Binding ControllingPokemon.ZDetailOfMove[1]}" Click="zmove1_Click"/>
                <b:GameButton x:Name="zmove2" Content="{Binding ControllingPokemon.ZMoves[2]}" Style="{StaticResource L}" Margin="0,101,0,0" ToolTip="{Binding ControllingPokemon.ZDetailOfMove[2]}" Click="zmove2_Click"/>
                <b:GameButton x:Name="zmove3" Content="{Binding ControllingPokemon.ZMoves[3]}" Style="{StaticResource R}" Margin="0,101,0,0" ToolTip="{Binding ControllingPokemon.ZDetailOfMove[3]}" Click="zmove3_Click"/>
                <b:GameButton Style="{StaticResource ReturnButton}"/>
                <b:GameButton x:Name="move0" Content="{Binding ControllingPokemon.Moves[0]}" Style="{StaticResource L}" Margin="0,41,0,0" ToolTip="{Binding ControllingPokemon.DetailOfMove[0]}"/>
                <b:GameButton x:Name="move1" Content="{Binding ControllingPokemon.Moves[1]}" Style="{StaticResource R}" Margin="0,41,0,0" ToolTip="{Binding ControllingPokemon.DetailOfMove[1]}"/>
                <b:GameButton x:Name="move2" Content="{Binding ControllingPokemon.Moves[2]}" Style="{StaticResource L}" Margin="0,101,0,0" ToolTip="{Binding ControllingPokemon.DetailOfMove[2]}"/>
                <b:GameButton x:Name="move3" Content="{Binding ControllingPokemon.Moves[3]}" Style="{StaticResource R}" Margin="0,101,0,0" ToolTip="{Binding ControllingPokemon.DetailOfMove[3]}"/>
                <ToggleButton IsChecked="{Binding Mega}" Width="320" Height="108" Visibility="{Binding MegaVisibility}" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid>
                                <Image Name="main" IsHitTestVisible="False" Source="/PBO;component/images/ControlPanel/Fight/MegaF.png"/>
                                <Ellipse Fill="Transparent" Margin="14,36,0,0" Width="114" Height="114" IsHitTestVisible="True"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="main" Property="Source" Value="/PBO;component/images/ControlPanel/Fight/MegaT.png"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                <ToggleButton x:Name="Zmove" IsChecked="{Binding Zmove}" Width="320" Height="108" Visibility="{Binding ZmoveVisibility}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Zmove_Click">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid>
                                <Image Name="main" IsHitTestVisible="False" Source="/PBO;component/images/ControlPanel/Fight/ZmoveF.png"/>
                                <Ellipse Fill="Transparent" Margin="14,36,0,0" Width="114" Height="114" IsHitTestVisible="True"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="main" Property="Source" Value="/PBO;component/images/ControlPanel/Fight/ZmoveT.png"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
            </Grid>
        </TabItem>
