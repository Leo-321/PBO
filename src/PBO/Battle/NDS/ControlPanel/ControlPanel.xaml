                                    <Setter Property="Image" Value="/PBO;component/images/ControlPanel/Pokemon/FaintButton.png"/>
                                </DataTrigger>
                                <Trigger Property="Content" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="ContentTemplate" Value="{x:Null}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style x:Key="PL" TargetType="b:GameButton" BasedOn="{StaticResource L}">
                            <Setter Property="Image" Value="/PBO;component/images/ControlPanel/Pokemon/Partner.png"/>
                        </Style>
                    </b:GameButton.Resources>
