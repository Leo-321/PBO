<ResourceDictionary  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="PokemonStateLabel">
        <Image Name="img" Height="10" Width="40" SnapsToDevicePixels="True" Stretch="Uniform" ToolTip="{Binding}"/>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding}" Value="BRN">
                <Setter TargetName="img" Property="Source" Value="/PBO;component/images/PokemonState/BRN.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="FRZ">
                <Setter TargetName="img" Property="Source" Value="/PBO;component/images/PokemonState/FRZ.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="PAR">
                <Setter TargetName="img" Property="Source" Value="/PBO;component/images/PokemonState/PAR.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="PSN">
                <Setter TargetName="img" Property="Source" Value="/PBO;component/images/PokemonState/PSN.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="BadlyPSN">
                <Setter TargetName="img" Property="Source" Value="/PBO;component/images/PokemonState/bPSN.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="SLP">
                <Setter TargetName="img" Property="Source" Value="/PBO;component/images/PokemonState/SLP.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="Faint">
                <Setter TargetName="img" Property="Source" Value="/PBO;component/images/PokemonState/FNT.png"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>   
</ResourceDictionary>
    
